/* **************************** */
// hero 
/* **************************** */
.hero__inner
    @media ( max-width 1024px )
        padding: 0;

.hero__main
    @media ( max-width 1024px )
        height: 100vh;
        align-items: center;

.hero__meta
    @media ( max-width 1024px )
        width: 100%;
        text-align: center;

.hero__title
    @media ( max-width 375px )
        font-size: 46px;
    @media ( orientation landscape ) and ( max-width 800px )
        font-size: 46px;

.hero__text
    @media ( max-width 375px )
        font-size: 12px;
        line-height: 16px;
    @media ( orientation landscape ) and ( max-width 800px )
        font-size: 12px;
        line-height: 16px;
        &:not(:last-child)
            margin-bottom: 5%;

.hero__btn
    @media ( max-width 1024px )
        padding: 0;
        text-align: center;
    @media ( max-width 375px )
        div
            width: 100%;
        & > div:not(:last-child)
            margin: 0;
            margin-bottom: 7%;


.hero__figure  
    @media ( max-width 1024px )
        display: none;
/* **************************** */
// hero end 
/* **************************** */



/* **************************** */
// feature 
/* **************************** */
.feat__inner
    @media ( max-width 840px )
        padding: 10% 0;
    @media ( orientation landscape ) and ( max-width 800px ) 
        padding: 5% 0;

.feat__title
    @media ( max-width 420px )
        font-size: 18px;
    @media ( orientation landscape ) and ( max-width 800px )
        font-size: 18px;

.feat__text
    @media ( max-width 420px )
        font-size: 12px;
        line-height: 20px;
    @media ( orientation landscape ) and ( max-width 800px )
        font-size: 12px;
        line-height: 20px;    

/* **************************** */
// feature end 
/* **************************** */



/* **************************** */
// login 
/* **************************** */
.login__inner
    @media ( max-width 840px )
        padding: 0;

.login__main
    @media ( max-width 840px )
        flex-wrap: wrap;
        align-items: flex-start;
        height: 100vh;
        padding: 10% 0;
        & > div
            width: 100%;
    @media ( max-width 540px )
        height: auto;
    @media ( orientation landscape ) and ( max-width 800px )
        height: auto;
        padding: 10% 0; 
    @media ( orientation landscape ) and ( max-width 800px )
        padding: 5% 0;

.login__meta
    @media ( max-width 840px )
        text-align: center;
        order: -1;

.login__helper
    @media ( max-width 840px )
        margin: 0;

.login__title
    @media ( max-width 768px )
        margin-bottom: 3%;
        font-size: 28px;
    @media ( max-width 420px )
        margin-bottom: 7%;
        font-size: 18px;
    @media ( orientation landscape ) and ( max-width 800px )
        margin-bottom: 3%;
        font-size: 18px;

.login__text
    @media ( max-width 540px )
        font-size: 14px;
    @media ( max-width 420px )
        font-size: 12px;
        line-height: 24px;
    @media ( orientation landscape ) and ( max-width 800px )
        font-size: 12px;
        line-height: 24px;

.login__figure
    @media ( max-width 840px )
        order: 1;
    @media ( max-width 540px )
        display: none;
    @media ( orientation landscape ) and ( max-width 800px )
        display: none; 

.login__figure img
    @media ( max-width 840px )
        top: 45%;
        left: 27.3%;
/* **************************** */
// login end
/* **************************** */



/* **************************** */
// menu
/* **************************** */
.menu__inner
    @media ( max-width 840px )
        @extend .login__inner;

.menu__main
    @media ( max-width 840px )
        @extend .login__main;

.menu__main > div
    @media ( max-width 840px )
        width: 100%;

.menu__meta
    @media ( max-width 840px )
        @extend .login__meta;

.menu__title
    @media ( max-width 768px )
        @extend .login__title;

.menu__text
    @media ( max-width 540px )
        @extend .login__text;

.menu__figure
    @media ( max-width 540px )
        display: none;
    @media ( orientation landscape ) and ( max-width 800px )
        display: none; 

.menu__figure img
    @media ( max-width 840px )
        top: 45%;
        left: 27.3%;

/* **************************** */
// menu end 
/* **************************** */



/* **************************** */
// gallery
/* **************************** */
.gal
    @media ( max-width 540px )
        display: none;
    @media ( orientation landscape ) and ( max-width 800px )
        display: none;

.gal__inner
    @media ( max-width 840px )
        padding: 10% 0;
    @media ( orientation landscape ) and ( max-width 800px )
        padding: 5% 0;
    
.gal__header
    @media ( max-width 768px )
        margin-bottom: 5%;
    span
        @media ( max-width 768px )
            font-size: 18px;
    .gal__title
        @media ( max-width 768px )
            font-size: 28px;
/* **************************** */
// gallery end
/* **************************** */



/* **************************** */
// testimonial
/* **************************** */
.test
    @media ( max-width 540px )
        background-color: #fff;
    @media ( orientation landscape ) and ( max-width 800px )
        background-color: #fff;

.test__inner
    @extend .gal__inner;
/* **************************** */
// testimonial end
/* **************************** */


/* **************************** */
// news
/* **************************** */
.news__inner
    @media ( max-width 840px )
        @extend .login__inner;

.news__main
    @media ( max-width 840px )
        @extend .login__main;
        height: auto;

.news__meta
    @media ( max-width 840px )
        @extend .login__meta;
        margin-bottom: 5%;
    @media ( orientation landscape ) and ( max-width 800px )
        margin-bottom: 3%;

.news__title
    @media ( max-width 480px )
        font-size: 24px;
    @media ( max-width 375px )
        font-size: 18px;
    @media ( orientation landscape ) and ( max-width 800px )
        margin: 1% 0;
        font-size: 18px;

.news__meta span 
    @media ( max-width 480px )
        font-size: 16px;
    @media ( max-width 375px )
        font-size: 12px;
    @media ( orientation landscape ) and ( max-width 800px )
        font-size: 12px;

.news__form
    @media ( max-width 840px )
        text-align: center;
        .news__row
            margin-bottom: 10%;
        .news__helper
            margin: 0;
    .news__row
        @media ( max-width 480px )
            margin-bottom: 20%; 
            & > div:not(:last-child)
                margin: 0;
                margin-bottom: 7%;
    .news__col
        @media ( max-width 480px )
            display: block;
    @media ( orientation landscape ) and ( max-width 800px )
        .news__row
            margin-bottom: 10%;
/* **************************** */
// news end 
/* **************************** */