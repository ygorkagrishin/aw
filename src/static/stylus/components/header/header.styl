.header
    position: absolute;
    top: 0;
    left: 0;
    z-index: 7;
    width: 100%;

.header__inner
    padding: 7.5% 0;

.header__row
    display: flex;
    align-items: center;
    justify-content: space-between;

.header__search
    position: relative;
    cursor: pointer;
    img 
        vertical-align: -3px;
    label 
        display: inline-block;
        width: 0;
        overflow: hidden;
    input 
        width: 0;
        font: 13px / 1 sansReg;
        vertical-align: 8px;
        color: #fff;
        background-color: transparent; 
        border: none;
        outline: none;
    &.active
        input 
            width: auto;
            border-bottom: 2px solid primaryGrey;
    .js-search-trig
        position: absolute;
        top: -6px;
        left: -10px;
        z-index: 999;
        width: 42px;
        height: 42px;
    