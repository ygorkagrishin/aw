.b-menu
    position: relative;
    width: 25px;
    height: 22px;
    span
        display: block;
        width: 100%;
        height: 3px;
        background-color: #fff;
        &::before
            content: '';
            position: absolute;
            top: 8px;
            left: 0;
            display: block;
            width: 100%;
            height: 3px;
            background-color: #fff;
        &::after
            @extend .b-menu span::before;
            top: 16px;
    .js-b-menu
        position: absolute;
        top: -14px;
        left: -11px;
        z-index: 9999;
        width: 48px;
        height: 48px;
        cursor: pointer;

        