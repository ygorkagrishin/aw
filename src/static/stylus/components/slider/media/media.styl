.caro__blockquote
    @media ( max-width 840px )
        justify-content: center;
    @media ( max-width 540px )
        flex-wrap: wrap;

.caro__img-wrap
    @media ( max-width 1024px )
        width: 90%;
        height: 90%;

.caro__meta
    @media ( max-width 840px )
        max-width: 500px;
        padding-left: 1%;
    @media ( max-width 768px )
        max-width: 350px;
    @media ( max-width 540px )
        max-width: 90%;
        padding: 0;
        margin-top: 5%;
        text-align: center;
    @media ( max-width 540px )
        margin-top: 11%;

.caro__name
    @media ( max-width 375px )
        margin-bottom: 5%;
        font-size: 24px;

.caro__text
    @media ( max-width 540px )
        font-size: 14px;
        line-height: 24px;
    @media ( max-width 375px )
        font-size: 12px;
        line-height: 22px;

.caro__arrow img
    @media ( max-width 540px )
        width: 70%;

.caro__prev
    @media ( max-width 840px )
        left: 3%;

.caro__next
    @media ( max-width 840px ) 
        right: 3%;
